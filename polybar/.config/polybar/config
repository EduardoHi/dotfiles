[colors]

transparent-background = #000f0f0f

background = #000
foreground = #fff
foreground-alt = #c555

; Green
primary = #3ee57e
; Orange
secondary = #fe9e5b
alert = #f00

[shared]
; attributes shared among both bars
mono-font = DejaVu Sans Mono:style=Book:size=11;3
icon-font = Material Icons:style=Regular;3

[bar/top]
; set it up to each monitor
monitor = ${env:MONITOR:}
background = ${colors.transparent-background}
foreground = ${colors.foreground}

modules-center = i3
modules-right = date

font-0 = ${shared.mono-font}
font-1 = Material Icons:style=Regular

border-bottom-size  = 4
border-top-size     = 4

border-left-size  = 4
border-right-size = 4

[bar/bottom]
bottom = true

; set it up to each monitor
monitor = ${env:MONITOR:}

background = ${colors.transparent-background}
foreground = ${colors.foreground}

border-bottom-size  = 4
border-top-size     = 4

border-left-size  = 4
border-right-size = 4

module-margin = 2

modules-left = xkeyboard backlight volume
modules-right = wlan eth battery memory cpu filesystem

font-0 = ${shared.mono-font}
font-1 = ${shared.icon-font}


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = %layout%
label-layout-background = ${colors.background}
label-layout-foreground = ${colors.secondary}
label-indicator-background = ${colors.secondary}
label-layout-padding = 1

[module/filesystem]
type = internal/fs
interval = 25
spacing = 3

mount-0 = /

label-mounted = %{F#fe9e5b}%mountpoint%%{F-} %free%
label-mounted-background = ${colors.background}
label-mounted-padding = 1


[module/i3]

pin-workspaces = true
type = internal/i3
format = <label-mode> <label-state>
index-sort = true
wrapping-scroll = false

label-mode-background = ${colors.background}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-foreground = #000
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
; set to equal the config in label-focused
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.secondary}
label-urgent-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
label = LIGHT %percentage%%
label-padding = 1
label-background = ${colors.background}

ramp-0 = 


[module/cpu]
type = internal/cpu
interval = 2
label = CPU %percentage%%
format-prefix-foreground = ${colors.secondary}
format-background = ${colors.background}
format-padding = 1

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.secondary}
format-underline = #4bffdc
label = RAM %percentage_used%%
format-prefix = 
format-background = ${colors.background}
format-padding = 1

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

; label-connected-background = ${color.background}

format-connected = <label-connected>
format-connected-padding = 1
format-connected-background = ${colors.background}

label-connected = %essid%: %local_ip% @ %signal%%
label-disconnected = not connected

format-disconnected-foreground = ${colors.secondary}

[module/eth]
type = internal/network
interface = enp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.secondary}
format-connected-padding = 1
format-connected-background = ${colors.background}

label-connected = %ifname%: %local_ip% @ %linkspeed%

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"

time = %H:%M:%S

label = %date% %time%
format-background= ${colors.background}
format-padding = 1

[module/volume]
type = internal/alsa

format-volume-padding = 1
format-volume-background = ${colors.background}
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

format-muted-prefix = " "
label-muted = " "
format-muted-foreground = ${colors.primary}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 
ramp-volume-5 = 
ramp-volume-6 = 


[module/battery]
type = internal/battery
full-at = 99
time-format = %H:%M
battery = BAT0
adapter = AC
format-charging = <animation-charging> <label-charging>

format-charging-background = ${colors.background}
format-charging-padding = 1

label-charging = %percentage%%
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full = <label-full>
format-full-background = ${colors.background}
format-full-padding = 1

format-full-prefix = " "
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1-foreground = ${colors.secondary}
ramp-capacity-foreground   = ${colors.foreground}
bar-capacity-width = 10

animation-charging-0 = ""
; animation-charging-1 = ""
; animation-charging-2 = ""
; animation-charging-3 = ""
; animation-charging-4 = ""

; animation-charging-framerate = 750

[settings]
screenchange-reload = true

